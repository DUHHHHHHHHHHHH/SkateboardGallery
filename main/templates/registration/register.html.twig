{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="widget-login">
    <div class="login-container">
        <h1 class="h3 mb-3 font-weight-normal">Registrati</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                attr: {'class': 'form-control', 'placeholder': 'Password'}
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-lg btn-primary">Registrati</button>
        {{ form_end(registrationForm) }}

        <a href="{{ path('app_login') }}" class="btn btn-link mt-2">Hai gi√† un account? Accedi</a>
    </div>
</div>
{% endblock %}